<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/imgv_inviteUserPic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        
        />

    <TextView
        android:id="@+id/txt_inviteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:text="Bryle Lyndon Orito Monter Siega" 
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:textColor="#191919"/>

    <TextView
        android:id="@+id/txt_inviteAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_inviteUser"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:text="has invited you to the project" 
        android:textColor="#191919"/>

    <TextView
        android:id="@+id/txt_inviteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_inviteDate"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:text="TextView"
        android:visibility="gone" />
	
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <Button
        android:id="@+id/btn_inviteAccept"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_inviteDate"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:background="@drawable/simpleblue"
        android:text="Accept"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" 
        android:layout_marginRight="4dp"/>

    <Button
        android:id="@+id/btn_inviteDecline"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/btn_inviteAccept"
        android:layout_alignBottom="@+id/btn_inviteAccept"
        android:layout_toRightOf="@+id/btn_inviteAccept"
        android:background="@drawable/simplered"
        android:text="Decline"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_inviteProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_inviteAction"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:paddingRight="10dp"
        android:text="Project Nucleusxxxxxx"
        android:textColor="#191919"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_inviteUnder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_inviteProject"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:paddingRight="10dp"
        android:text="in the workspace"
        android:textColor="#191919" />

    <TextView
        android:id="@+id/txt_inviteWorkspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_inviteUnder"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:paddingRight="10dp"
        android:text="Sample Workspace"
        android:textColor="#191919"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_inviteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_inviteWorkspace"
        android:layout_toRightOf="@+id/imgv_inviteUserPic"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="a few minutes ago"
        android:textColor="#b2b2b2"
        android:textSize="10sp" />

</RelativeLayout>
