<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#e5edf4"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/layoutProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#468499"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project: "
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txt_notifProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nucleus"
            android:textColor="#fff" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layoutProject"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/txt_notifContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="Bryle has commented on oryt" 
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#262626"
        />

    <TextView
        android:id="@+id/txt_notifAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_notifContent"
        android:layout_below="@+id/txt_notifContent"
        android:textSize="10sp"
        android:textColor="#3f3f3f"
        android:text="5 centuries ago" />

    <TextView
        android:id="@+id/txt_notifProjectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/txt_notifAgo"
        android:layout_marginLeft="50dp"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_notifType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_notifProjectId"
        android:layout_below="@+id/txt_notifProjectId"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_notifTypeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_notifProjectId"
        android:layout_alignBottom="@+id/txt_notifProjectId"
        android:layout_toRightOf="@+id/txt_notifProjectId"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_notifStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/txt_notifContent"
        android:layout_marginRight="57dp"
        android:text=""
        android:visibility="gone" />

</RelativeLayout>