<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/img_pendingPic"
         android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/txt_pendingEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_pendingPic"
        android:layout_toRightOf="@+id/img_pendingPic"
        android:text="blmorito@yahoo.com"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#191919"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/txt_pendingAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_pendingEmail"
        android:layout_below="@+id/txt_pendingEmail"
        android:text="Invited 6 days ago"
        android:textColor="#191919"
        android:textSize="10sp"
         />

    <Button
        android:id="@+id/btn_pendingResend"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_pendingAgo"
        android:layout_toRightOf="@+id/img_pendingPic"
        android:text="Resend invitation"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/simpleblue" 
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btn_pendingCancel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/btn_pendingResend"
        android:layout_alignBottom="@+id/btn_pendingResend"
        android:layout_toRightOf="@+id/btn_pendingResend"
        android:background="@drawable/simplered"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Cancel invitation"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>
