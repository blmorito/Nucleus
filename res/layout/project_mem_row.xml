<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="15dp"
    android:background="@drawable/list_color_selector">

    <ImageView
        android:id="@+id/img_pmemPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_user"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/txt_pmemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_pmemPic"
        android:layout_toRightOf="@+id/img_pmemPic"
        android:text="TextView"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="@drawable/list_item_text_selector"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_pmemSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_pmemName"
        android:layout_below="@+id/txt_pmemName"
        android:text="Project member since "
        android:textColor="@drawable/list_item_text_selector"
         />

    <TextView
        android:id="@+id/txt_pmemRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="TextView"
        android:textSize="12sp" 
        android:layout_marginBottom="2dp"
        android:textColor="@drawable/list_item_text_selector"/>

    <TextView
        android:id="@+id/txt_pmemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_pmemName"
        android:layout_alignBottom="@+id/txt_pmemName"
        android:layout_alignParentRight="true"
        android:text="TextView"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txt_pmemSince"
        android:layout_toRightOf="@+id/img_pmemPic"
        android:src="@drawable/ic_action_person" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/txt_pmemSince"
        android:layout_below="@+id/txt_pmemRole"
        android:text="Remove from project"
        android:background="@drawable/simplered"
        android:textColor="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="13sp"
        android:visibility="gone"
         />

</RelativeLayout>
