<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	         <LinearLayout android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="20dp"
		        android:background="@drawable/gradient_bg"
		        android:orientation="vertical">
		
		         <ImageView
		             android:id="@+id/img_editProf"
		             android:layout_width="130dp"
		             android:layout_height="130dp"
		             android:src="@drawable/default_user" 
		             android:layout_gravity="center"
		             android:layout_marginTop="20dp"/>
		
		         <Button
		             android:id="@+id/btn_editProfUpload"
		             android:layout_width="wrap_content"
		             android:layout_height="30dp"
		             android:text="Upload from Gallery"
		             android:textColor="#fff"
		             android:layout_gravity="center"
		             android:paddingLeft="10dp"
		             android:paddingRight="10dp"
		             android:textSize="15sp"
		             android:textStyle="bold"
		             android:layout_marginTop="15dp"
		             android:background="@drawable/simplebtn" />
		         
		     </LinearLayout>
		
		     <LinearLayout
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:orientation="vertical"
		         android:layout_marginTop="20dp"
		         android:layout_marginLeft="10dp"
		         android:layout_marginRight="10dp" 
		         android:focusable="true"
			     android:focusableInTouchMode="true">
		         <TextView
		             android:id="@+id/txt_editProfChangePW"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginBottom="10dp"
		             android:text="Want to change email or password? Click here." 
		             android:textColor="#0051ad"/>
		
		         <TextView
		             android:id="@+id/textView1"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="Full Name"
		             android:textStyle="bold"
		             android:typeface="normal"
		             android:textColor="#38424b" />
		
		         <EditText
		             android:id="@+id/edt_editProfFull"
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:ems="10" 
		             android:layout_marginBottom="5dp">
		
		             
		         </EditText>
		
		         <TextView
		             android:id="@+id/textView2"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:text="Address"
		             android:textStyle="bold"
		             android:textColor="#38424b" />
		         <EditText
		             android:id="@+id/edt_editProfAddr"
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:ems="10" 
		             android:layout_marginBottom="5dp">
		
		             
		         </EditText>
		         
		
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:layout_marginTop="20dp" >
		
		             <Button
		                 android:id="@+id/btn_editProfSave"
		                 android:layout_width="0dp"
		                 android:layout_height="wrap_content"
		                 android:text="Save" 
		                 android:layout_weight="0.5"
		                 android:textColor="#fff"
		                 android:background="@drawable/simpleblue"
		                 />
		
		             <Button
		                 android:id="@+id/btn_editProfCancel"
		                 android:layout_width="0dp"
		                 android:layout_height="wrap_content"
		                 android:layout_weight="0.5"
		                 android:text="Cancel" 
		                 android:textColor="#00438e"
		                 android:layout_marginLeft="10dp"
		                 android:background="@drawable/simpleblueinverted"/>
		
		         </LinearLayout>
		         
		     </LinearLayout>
	    </LinearLayout>
    </ScrollView>
	      
     

</LinearLayout>
