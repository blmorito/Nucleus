<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/invitesuc"
        android:layout_marginTop="30dp"
        android:layout_gravity="center" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have successfuly sent an invite."
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inviting other people to collaborate is a good move. You will receive a notification once the invite is accepted or declined."
            android:layout_gravity="center"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_pInvSuccessGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to my project"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" 
            android:textColor="#fff"
            android:background="@drawable/simpleblue"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </LinearLayout>

</LinearLayout>
