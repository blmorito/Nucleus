<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" 
    android:background="@drawable/list_color_selector_light">

    <TextView
        android:id="@+id/txt_discussionSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="This is a SAMPLE DISCUSSION SUBJECT. SAMPLE sample SaMPle"
        android:textColor="#262626"
        android:textSize="20sp"
        android:maxLines="3"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/txt_discussionAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_discussionSubject"
        android:layout_below="@+id/txt_discussionSubject"
        android:text="Posted by Brylle"
        android:textColor="#3f3f3f"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_discussionSubject"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/txt_discussionAuthor"
        android:text="â€¢"
        android:textColor="#3f3f3f"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txt_discussionAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_discussionSubject"
        android:layout_toRightOf="@+id/textView3"
        android:text="25 minutes ago"
        android:textColor="#3f3f3f"
        android:textSize="10sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/txt_discussionAuthor"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#d9d9d9" />

    <TextView
        android:id="@+id/txt_discussionBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:text="The quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dogThe quick brown fox jumps over the lazy dog"
        android:textColor="#3f3f3f"
        android:textSize="13sp"
        android:maxLines="5"
        android:ellipsize="end" 
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/txt_discussionBody"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#d9d9d9" />

    <TextView
        android:id="@+id/txt_discussionCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:text="5 comments"
        android:textColor="#3f3f3f"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txt_discussionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_discussionAuthorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_discussionAuthor"
        android:layout_below="@+id/txt_discussionCommentCount"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:visibility="gone" />

</RelativeLayout>