<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d9d9d9" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9d9d9" >

            <Button
                android:id="@+id/btn_projectTasks"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Goals | Tasks" 
                android:textSize="15sp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_tasksp"
                android:background="@drawable/simpleblue"
                android:paddingLeft="10dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_projectFiles"
                android:layout_marginLeft="5dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Files"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_filesp"
                android:background="@drawable/simpleblue"
                android:paddingLeft="10dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9d9d9"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

            <Button
                android:id="@+id/btn_projectDiscussions"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Discussions"
                android:textSize="14sp"
                android:textColor="#fff" 
                android:drawableLeft="@drawable/ic_disscussionp"
                android:background="@drawable/simpleblue"
                android:paddingLeft="10dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_projectEvents"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Project Status"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_eventp"
                android:background="@drawable/simpleblue"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Activities" 
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            />
        
        <LinearLayout 
            android:id="@+id/no_project_activities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/xxx"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to your project!"
                android:textStyle="bold" 
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Collaboration is very important in a project. Nucleus helps people collaborate on the go. Kick things off by adding tasks, discussions, files or an event" />
            
        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
    </LinearLayout>
    

</LinearLayout>
