<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/img_wsMembersRow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/nucleusicon" />

    <TextView
        android:id="@+id/txt_wsMembersNameRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_wsMembersRow"
        android:layout_toRightOf="@+id/img_wsMembersRow"
        android:text="Brylle Orito"
        android:textStyle="bold"
        android:textColor="#191919"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_wsMembersEmailRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_wsMembersNameRow"
        android:layout_below="@+id/txt_wsMembersNameRow"
        android:textStyle="italic"
        android:textColor="#191919"
        android:text="blmorito@gmail.com" />

    <TextView
        android:id="@+id/txt_wsMembersRoleRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_wsMembersEmailRow"
        android:layout_toRightOf="@+id/img_wsMembersRow"
        android:text="Creator"
        android:textColor="#191919"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_wsmemberid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_wsMembersEmailRow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="TextView" 
        android:visibility="gone"/>

</RelativeLayout>
