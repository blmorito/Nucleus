<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_marginRight="10dp"
    android:background="#fff"
    android:layout_marginLeft="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txt_row_wsmemberProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Project Name"
        android:layout_marginTop="5dp"
        
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#3f3f3f" />

    <TextView
        android:id="@+id/txt_row_wsmemberProjectLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_row_wsmemberProjectName"
        android:layout_below="@+id/txt_row_wsmemberProjectName"
        android:text="Project Leader"
        android:textColor="#3f3f3f" />

    <TextView
        android:id="@+id/txt_row_wsmemberStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_row_wsmemberProjectLeader"
        android:layout_below="@+id/txt_row_wsmemberProjectLeader"
        android:text="Project Status"
        android:textSize="10sp"
        android:textColor="#3f3f3f" />

    <ProgressBar
        android:id="@+id/prog_wsmember"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_row_wsmemberStatus"
        android:layout_below="@+id/txt_row_wsmemberStatus"
        android:layout_marginTop="5dp"
        android:progressDrawable="@drawable/prog" />

    <TextView
        android:id="@+id/txt_row_wsmemberProjId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_row_wsmemberProjectName"
        android:layout_marginRight="65dp"
        android:visibility="gone"
        android:text="TextView"
        android:textColor="#3f3f3f" />

</RelativeLayout>
