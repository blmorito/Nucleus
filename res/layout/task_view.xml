<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d9d9d9" >

    <TextView
        android:id="@+id/textView5tops"
        android:background="#004792"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This task belongs to the goal: GOal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="13sp"
        android:textColor="#fff"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold" />
   	<LinearLayout android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="10dp"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:padding="10dp"
	        android:background="#fff">

           <CheckBox
               android:id="@+id/cb_taskkk"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="MyTask" 
               android:button="@drawable/chkbox"/>

           <TextView
               android:id="@+id/txt_taskviewAssign"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="This task is assigned to :" />

           <TextView
               android:id="@+id/txt_taskviewDue"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Due on: Tomorrow:" />

           <TextView
               android:id="@+id/txt_taskCreator"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Task added by: Loading.." />
           <TextView
               android:id="@+id/txt_taskStatus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Task Status: " />

           <Button
               android:id="@+id/btn_startTask"
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:text="â–º Start task"
               android:textSize="15sp"
               android:layout_marginTop="5dp"
               android:textColor="#fff"
               android:paddingRight="10dp"
               android:paddingLeft="10dp"
               android:visibility="visible"
               android:background="@drawable/simpleblue" />
           
       </LinearLayout>

       <TextView
			        android:id="@+id/txtjkjk"
			        android:background="#004792"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Got any inquiries? Want to add an update? \nPost it as a comment below!"
			        android:gravity="center"
			        android:paddingTop="5dp"
			        android:paddingBottom="5dp"
			        android:paddingLeft="20dp"
			        android:paddingRight="20dp"
			        android:textSize="13sp"
			        android:textColor="#fff"
			        android:maxLines="2"
			        android:ellipsize="end"
			        android:textStyle="bold" />
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#fff">

            
			
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task name"
                android:textColor="#323232"
                android:textStyle="bold"
                 />

            <EditText
                android:id="@+id/edt_taskviewName"
                android:background="@drawable/edt_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="e.g. 'Design project flow'">
                
                </EditText>
                
             <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned to:"
                android:textColor="#323232"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                 />

             <Button
                 android:id="@+id/btn_taskviewAssign"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Anyone" 
                 android:textColor="#323232"
                 android:background="@drawable/simpleblueinverted"
                 android:layout_marginTop="2dp"/>
             
              <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due on: (Cannot exceed project deadline)"
                android:textColor="#323232"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                 />
              
               <Button
                 android:id="@+id/btn_taskviewDue"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Default: Tomorrow" 
                 android:textColor="#323232"
                 android:background="@drawable/simpleblueinverted"
                 android:layout_marginTop="2dp"/>

               <Button
                   android:id="@+id/btn_taskviewSave"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/simpleblue"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:text="Save Changes" 
                   android:layout_marginTop="30dp"/>
            
        </LinearLayout>
        
        
    </LinearLayout>
    </ScrollView>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="65dp"
	       
	        >
	         <LinearLayout android:id="@+id/no_comments_on_task"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:visibility="gone"
		            android:layout_marginTop="10dp"
		            android:padding="10dp">
		
		            <TextView
		                android:id="@+id/textView5"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="No comments on this task"
		                android:layout_gravity="center"
		                android:textColor="#3f3f3f" />
		            
		        </LinearLayout>

	        <ListView
	            android:id="@+id/listView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </ListView>
	        
	    </LinearLayout>
	    
         <LinearLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_alignParentBottom="true">
	        <LinearLayout android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="#adadad"></LinearLayout>
	        <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        >
	        
         <EditText
            android:id="@+id/edt_taskviewAddComment"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:minLines="2"
            android:maxLines="4"
            
            android:ems="10" 
            
            android:hint="Add a comment here.."
            
            
            android:background="@drawable/edt_bg2"/>

        <Button
	            android:id="@+id/btn_taskviewAddComment"
	            android:layout_width="0dp"
	            android:layout_weight="0.2"
	            android:layout_height="match_parent"
	            
	            android:background="@drawable/simplewyt"
	            android:textColor="#00438e"
	            android:text=""
	            android:drawableRight="@drawable/ic_action_send_nowb"
	            android:paddingRight="5dp"
	            android:paddingLeft="5dp"
	            android:drawablePadding="0dp"
	            android:paddingBottom="10dp"
	             />
	        
	    </LinearLayout>
	        
	        </LinearLayout>
        
    </RelativeLayout>
    

</LinearLayout>
