<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@drawable/list_color_selector_light" >

    <CheckBox
        android:id="@+id/cb_taskrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:button="@drawable/chkbox"
        android:textSize="15sp"
        
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
         />

    <TextView
        android:id="@+id/txt_checktaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cb_taskrow"
        android:layout_toRightOf="@+id/cb_taskrow"
        android:text="Task Name"
        android:textSize="15sp"
        android:textColor="#262626" />

    <TextView
        android:id="@+id/txt_checktaskDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_checktaskName"
        android:layout_below="@+id/txt_checktaskName"
        android:text="Due on: August"
        android:textSize="12sp"
        android:textColor="#3f3f3f" />

    <TextView
        android:id="@+id/txt_checktaskId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_taskrow"
        android:layout_alignBottom="@+id/cb_taskrow"
        android:layout_alignParentRight="true"
        android:text="TextView" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_checktaskIsLate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="59dp"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_checktaskDue"
        android:layout_below="@+id/txt_checktaskDue"
        android:text="Assigned to:"
        android:textColor="#3f3f3f"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_checktaskAssignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtass"
        android:layout_alignBottom="@+id/txtass"
        android:layout_toRightOf="@+id/txtass"
        android:text="TextView" 
        android:textColor="#fff"
        android:textSize="10sp"
        android:background="#3f3f3f"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>

    <TextView
        android:id="@+id/txt_checktaskAssigneeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_taskrow"
        android:layout_alignBottom="@+id/cb_taskrow"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/txt_checktaskAssignee"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_checktaskStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtass"
        android:layout_below="@+id/txt_checktaskAssignee"
        android:text="Task status:"
        android:layout_marginRight="3dp"
        android:visibility="visible"
        android:textSize="12sp"
        android:textColor="#3f3f3f" />

    <TextView
        android:id="@+id/txt_checktaskStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_checktaskStatusLabel"
        android:layout_toRightOf="@+id/txt_checktaskStatusLabel"
        android:text="TextView"
        android:visibility="visible"
        android:textSize="12sp"
        android:textColor="#3f3f3f" />

</RelativeLayout>
