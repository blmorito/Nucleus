<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_color_selector" >

    <TextView
        android:id="@+id/txt_switchWsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1ws"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt_switchWsDesc"
        android:text="TextView" 
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageView1ws"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/logo_icon" />

    <TextView
        android:id="@+id/txt_switchWsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1ws"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView1ws"
        android:text="Workspace Name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@drawable/list_item_text_selector" 
        />

    <TextView
        android:id="@+id/txt_switchWsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_switchWsName"
        android:layout_below="@+id/txt_switchWsName"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="workspace description"
        android:textColor="@drawable/list_item_text_selector" />

</RelativeLayout>
