<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_color_selector_light" 
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/img_commentRowPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/default_user" 
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txt_commentRowAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_commentRowPic"
        android:layout_toRightOf="@+id/img_commentRowPic"
        android:layout_marginRight="10dp"
        android:text="Brylle Lyndon Orito"
        android:textStyle="bold" 
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#262626"/>

    <TextView
        android:id="@+id/txt_commonRowContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_commentRowAuthor"
        android:layout_below="@+id/txt_commentRowAuthor"
        android:layout_marginRight="10dp"
        android:textColor="#262626"
        android:textSize="16sp"
        android:text="The quick brown fox jumps over the lazy dog" />

    <TextView
        android:id="@+id/txt_commentRowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_commonRowContent"
        android:layout_toRightOf="@+id/img_commentRowPic"
        android:text="2 hours ago"
        android:textColor="#787878"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_commentRowId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_commentRowDate"
        android:layout_marginLeft="67dp"
        android:layout_toRightOf="@+id/txt_commentRowDate"
        android:text="TextView" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_commentRowAuthorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_commonRowContent"
        android:layout_below="@+id/txt_commentRowDate"
        android:layout_marginRight="35dp"
        android:text="TextView" 
        android:visibility="gone"/>

</RelativeLayout>
